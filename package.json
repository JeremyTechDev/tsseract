{
  "name": "tsseract",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "14",
    "npm": "7"
  },
  "scripts": {
    "start": "node ./dist/server",
    "build": "next build ./dist/client",
    "dev": "nodemon --config nodemon.json ./dist/server",
    "tsc": "run-p tsc:client tsc:server",
    "tsc:w": "run-p tsc:w:*",
    "tsc:client": "tsc -p ./client",
    "tsc:server": "tsc -p ./server",
    "tsc:w:client": "tsc -p ./client -w",
    "tsc:w:server": "tsc -p ./server -w",
    "seed": "node dist/server/seeder.js",
    "copy-files": "cp -vr ./static/. dist/client/public/",
    "copy-css": "cp -vr ./client/main.css dist/client/main.css",
    "test": "NODE_ENV=test && jest --detectOpenHandles",
    "postinstall": "yarn tsc",
    "heroku-postbuild": "run-s build copy-files copy-css"
  },
  "dependencies": {
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "@hapi/joi": "^17.1.1",
    "@mui/icons-material": "^5.0.0-rc.1",
    "@mui/material": "^5.0.0-rc.1",
    "@mui/styles": "^5.0.0-rc.1",
    "avataaars": "^1.2.1",
    "bcrypt": "^5.0.0",
    "cookie-parser": "^1.4.5",
    "dayjs": "^1.10.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "is-hotkey": "^0.1.6",
    "is-url": "^1.2.4",
    "jsonwebtoken": "^8.5.1",
    "mixpanel-browser": "^2.41.0",
    "mongoose": "^5.9.16",
    "next": "^10.0.5",
    "nextjs-progressbar": "0.0.7",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "slate": "^0.59.0",
    "slate-react": "^0.59.0"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.12.13",
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.7",
    "@types/faker": "^5.1.4",
    "@types/hapi__joi": "^17.1.6",
    "@types/jest": "^26.0.19",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/material-ui": "^0.21.8",
    "@types/mixpanel-browser": "^2.35.7",
    "@types/mongoose": "^5.7.31",
    "@types/node": "^14.0.22",
    "@types/react": "^16.9.43",
    "@types/set-cookie-parser": "0.0.6",
    "@types/supertest": "^2.0.10",
    "babel-plugin-styled-components": "^1.11.1",
    "faker": "^5.1.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.2.7",
    "nodemon": "^2.0.6",
    "prettier": "2.2.1",
    "pretty-quick": "^2.0.1",
    "set-cookie-parser": "^2.4.6",
    "supertest": "^4.0.2",
    "typescript": "^3.9.6"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
