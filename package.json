{
  "name": "tsseract",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next ./dist/client",
    "server": "nodemon --config nodemon.json ./dist/server",
    "watch": "run-p dev server",
    "tsc:client": "tsc -p ./client",
    "tsc:server": "tsc -p ./server",
    "tsc:watch:client": "tsc -p ./client -w",
    "tsc:watch:server": "tsc -p ./server -w",
    "tsc": "run-p tsc:client tsc:server",
    "tsc:watch": "run-p tsc:watch:*",
    "copy-files": "cp -vr ./static/. dist/client/public/",
    "start": "next start ./dist/client",
    "build": "next build",
    "test": "NODE_ENV=test && jest --detectOpenHandles"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@zeit/next-sass": "^1.0.1",
    "bcrypt": "^5.0.0",
    "cookie-parser": "^1.4.5",
    "dompurify": "^2.0.12",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "highlight.js": "^10.1.2",
    "jsonwebtoken": "^8.5.1",
    "marked": "^1.1.1",
    "mongoose": "^5.9.16",
    "next": "^10.0.0",
    "node-emoji": "^1.10.0",
    "node-sass": "^4.14.1",
    "nprogress": "^0.2.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "set-cookie-parser": "^2.4.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/dompurify": "^2.0.3",
    "@types/express": "^4.17.7",
    "@types/hapi__joi": "^17.1.4",
    "@types/highlight.js": "^9.12.4",
    "@types/jest": "^26.0.13",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/marked": "^1.1.0",
    "@types/material-ui": "^0.21.8",
    "@types/mongoose": "^5.7.31",
    "@types/node": "^14.0.22",
    "@types/node-emoji": "^1.8.1",
    "@types/node-sass": "^4.11.1",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^16.9.43",
    "@types/set-cookie-parser": "0.0.6",
    "@types/supertest": "^2.0.10",
    "babel-plugin-styled-components": "^1.11.1",
    "eslint": "^7.4.0",
    "eslint-config-airbnb": "^18.2.1",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.2.7",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "supertest": "^4.0.2",
    "typescript": "^3.9.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "./src/*.{js,jsx,ts,tsx}": [
      "npx prettier --write",
      "eslint src/*.js --fix-dry-run"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
